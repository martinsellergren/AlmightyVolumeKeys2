<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:summary="Volume key bindings when your device is playing music." />

    <Preference
        app:key="preference_music_reset"
        app:title="Reset to defaults" />

    <Preference
        app:key="preference_music_clear"
        app:title="Clear all" />

    <ListPreference
        app:key="listPreference_music_command_1"
        app:title="Up"
        app:entries="@array/music_actions"
        app:entryValues="@array/music_actions"
        app:defaultValue="No action"
        app:useSimpleSummaryProvider="true" />

</androidx.preference.PreferenceScreen>