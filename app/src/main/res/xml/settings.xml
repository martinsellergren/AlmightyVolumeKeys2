<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="General"
        app:singleLineTitle="false">

        <ListPreference
            app:key="ListPreference_VolumeClicksChange"
            app:title="Volume clicks change"
            app:singleLineTitle="false"
            app:entries="@array/media_or_ringtone_volume_with_after_5_clicks"
            app:entryValues="@array/media_or_ringtone_volume_with_after_5_clicks"
            app:defaultValue="Media volume"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="ListPreference_LongVolumePressChanges"
            app:title="Long volume press changes"
            app:singleLineTitle="false"
            app:entries="@array/media_or_ringtone_volume"
            app:entryValues="@array/media_or_ringtone_volume"
            app:defaultValue="Media volume"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="SwitchPreferenceCompat_defaultVolumeKeyActionWhenCameraActive"
            app:title="Default volume key camera-action"
            app:singleLineTitle="false"
            app:summary="When camera is active a photo is usually taken when pressing a volume key (a system feature on many Android devices). Set this to True to execute this default camera-action instead of any mapped Almighty Volume Keys-action."
            app:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Sound recording settings"
        app:singleLineTitle="false">

        <Preference
            app:key="Preference_gotoSoundRec"
            app:title="Open The Sound Recorder"
            app:singleLineTitle="false"
            app:icon="@drawable/mic_24dp"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Control sleep settings (advanced)"
        app:singleLineTitle="false">

        <Preference
            app:summary="If nothing significant is going on (no music, no phone call, not charging etc) your device might fall asleep. (Only happens when the screen is off). When this happens, the volume keys won't work until the screen is turned on and the device wakes up." />

        <SeekBarPreference
            app:key="SeekBarPreference_preventSleepTimeout"
            app:title="Prevent sleep timeout [minutes]"
            app:singleLineTitle="false"
            app:summary="Prevent sleep this long after screen off. Zero means the device falls asleep whenever it pleases. Higher value means less sleep so more battery usage (but usually not too bad)."
            app:defaultValue="60"/>

        <SwitchPreferenceCompat
            app:key="SwitchPreferenceCompat_allowSleep"
            app:title="Allow sleep [o'clock]"
            app:singleLineTitle="false"
            app:defaultValue="false"/>

        <SeekBarPreference
            app:key="SeekBarPreference_allowSleepStart"
            app:summary="Always allow sleep (ignoring the timeout above) starting at this hour of the day..."
            app:dependency="SwitchPreferenceCompat_allowSleep"
            app:defaultValue="23" />

        <SeekBarPreference
            app:key="SeekBarPreference_allowSleepEnd"
            app:summary="...until this hour of the day."
            app:dependency="SwitchPreferenceCompat_allowSleep"
            app:defaultValue="6" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>